#!/bin/bash
. /etc/functions

TRACE_FUNC

if [ "$CONFIG_DEBUG_OUTPUT" = "y" ]; then 
	#Generalize user prompt to continue poweroff or go to recovery shell 
	read -r -n 1 -s -p "Press any key to continue poweroff or 'r' to go to recovery shell: " REPLY 
	echo 
	if [ "$REPLY" = "r" ] || [ "$REPLY" = "R" ]; then 
		recovery "Poweroff call bypassed to go into recovery shell to debug"
	fi 
fi

# Shut down TPM
if [ "$CONFIG_TPM" = "y" ]; then
	tpmr shutdown
fi

# Sync all mounted filesystems
echo s > /proc/sysrq-trigger

# Remount all mounted filesystems in read-only mode
echo u > /proc/sysrq-trigger

# Shut off the system
echo o > /proc/sysrq-trigger
